<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.DriveTheBandController"
            prefHeight="400.0" prefWidth="600.0">
    <left>
        <TableView fx:id="trackTable" prefHeight="200.0" prefWidth="500.0" BorderPane.alignment="CENTER">
            <columns>
                <TableColumn fx:id="trackName"  text="Name" />
                <TableColumn fx:id="creatorUser" text="Creator" />
                <TableColumn fx:id="creationDate" text="date of creation"/>
            </columns>
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
        </TableView>
    </left>
    <right>
        <VBox alignment="TOP_RIGHT" BorderPane.alignment="CENTER" spacing="20">
            <children>
                <Label fx:id="songTitleLabel"
                       BorderPane.alignment="CENTER"
                       textAlignment="CENTER">
                       <font>
                           <Font name="Gill Sans" size="20">
                           </Font>
                       </font>

                </Label>
            </children>
            <children>
                <Button fx:id="chooseSongButton" text = "Choose a song"
                        BorderPane.alignment="TOP_RIGHT"
                        onAction="#handleChooseSongButton"
                        prefWidth="200"/>
            </children>
            <children>
                <Button fx:id="deleteSelectedButton" text = "delete selected..."
                        BorderPane.alignment="TOP_RIGHT"
                        onAction="#handleDeleteSelectedButton"
                        prefWidth="200"/>
            </children>
            <children>
                <Button fx:id="playButton" text = "play selected tracks"
                        BorderPane.alignment="TOP_RIGHT"
                        onAction="#handlePlayButton"
                        prefWidth="200"/>
            </children>
            <children>
                <Button fx:id="stopButton" text = "stop playing"
                        BorderPane.alignment="TOP_RIGHT"
                        onAction="#handleStopButton"
                        prefWidth="200"/>
            </children>
            <children>
                <Button fx:id="addNewTrackButton" text="add new stem"
                BorderPane.alignment="TOP_RIGHT"
                onAction="#handleAddNewTrackButton"
                prefWidth="200"/>
            </children>
        </VBox>
    </right>

</BorderPane>
